.header-bottom
        background-color #EFEFF0
        box-shadow: 0px -5px 25px rgba(239, 239, 240, 0.45);

        .wrapper
            display flex
            justify-content space-between
            align-items center
            padding-top 25px
            padding-bottom 25px

            @media screen and (max-width: 1200px)
                justify-content start

            @media screen and (max-width: 800px)
                justify-content end

                .links
                    display none

            .links
                margin-left 115px
                a
                    color #333333
                    text-decoration none
                    margin-right 47px

                    &:hover
                        text-decoration underline

            .cart
                position relative
                //display flex

                @media screen and (max-width: 800px)
                    margin-right 40px

                .cart-img
                    display flex
                    background-image url('../../../assets/img/cart.svg')
                    width 32px
                    height 32px
                    background-size 32px

                .items-ammount
                    position absolute
                    top -3px
                    right -20px
                    background-color #fff
                    border-radius 22px
                    color #C585A1
                    font-size 12px
                    line-height 18px
                    padding-right 11px
                    padding-left 11px