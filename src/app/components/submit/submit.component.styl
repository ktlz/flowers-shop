.submit
    border-bottom 1px solid #81AA94
    margin-bottom 60px

    @media screen and (max-width: 675px)
        padding-left 20px
        padding-right 20px
    
    h1
        text-align left

    form
        display flex
        flex-direction column
        .delivery-title
            font-size 24px
            line-height 18px
            letter-spacing 0.2px
            color #1D1C1C
            font-weight bold
        .subtitle
            font-size 18px
        .delivery
            display flex
            flex-direction column


            [type="radio"]:checked,
            [type="radio"]:not(:checked) 
                position absolute
                left -9999px
            
            [type="radio"]:checked + label,
            [type="radio"]:not(:checked) + label
            
                position relative
                padding-left 28px
                cursor pointer
                line-height 20px
                display inline-block
                color #1D1C1C
            
            [type="radio"]:checked + label:before,
            [type="radio"]:not(:checked) + label:before 
                content ''
                position absolute
                left 0
                top 0
                width 15px
                min-width 15px
                max-width 15px
                height 15px
                border 1px solid #569372
                border-radius 100%
                background #fff
            
            [type="radio"]:checked + label:after,
            [type="radio"]:not(:checked) + label:after 
                content: ''
                width 15px
                height 15px
                min-width 15px
                background #569372
                border 1px solid #569372
                position absolute
                top 0px
                left 0px
                border-radius 50%
                -webkit-transition all 0.2s ease
                transition all 0.2s ease
            
            [type="radio"]:not(:checked) + label:after 
                opacity 0
                -webkit-transform scale(0)
                transform scale(0)
            
            [type="radio"]:checked + label:after 
                opacity 1
                -webkit-transform scale(1)
                transform scale(1)
            
        .input,
        .textarea
            position relative
            display flex
            flex-direction column
            margin-bottom 24px
            
            input
            textarea
            select
                border 1px solid #81AA94
                box-sizing border-box
                border-radius 3px
                background-color transparent
                padding 18px 34px
                width 350px
                margin-bottom 0


            &-label
                position absolute
                left 32px
                top -11px
                background-color #fff
                padding 3px
                font-size 15px
                line-height 19px
                color #1D1C1C

        .textarea
            margin-bottom 16px

        .checkbox
            display flex
            align-items center
            font-size 14px
            line-height 18px
            color #77A88E
            padding-left 25px

            .check__input 
                position absolute
                -webkit-appearance none
                -moz-appearance none
                appearance none
                border none
            .check__box 
                position absolute
                margin-left -27px
                overflow hidden
                width 20px
                height 20px
                min-width 20px
                border-radius 7px
                border 1px solid #77A88E

            .check__input:checked + .check__box 
                background-image url('../../../assets/img/check.svg')
                background-position center
                background-repeat no-repeat
        
        .button-wrapper
            margin-bottom 55px