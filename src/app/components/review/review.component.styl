.review
    position relative
    display flex
    flex-direction column
    margin 20px
    width 570px
    margin-left 40px

    &-author
        margin-bottom 20px
        display flex
        align-items center

        .avatar
            display flex
            width 60px
            height 60px
            background-size cover
            background-color #eee
            border-radius 50%
            margin-right 10px
            min-width 60px
            min-height 60px
        
        .avatar-male
            background-image url('../../../assets/img/avatar-male.svg')

        .avatar-female
            background-image url('../../../assets/img/avatar-female.svg')

        .name
            font-weight medium

    @media screen and (max-width: 800px)
        width calc(100% - 50px)
        margin-left 25px