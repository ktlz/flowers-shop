.checkout-completed
    .wrapper
        display flex
        flex-direction column
        align-items center
        margin-top 178px
        margin-bottom 178px
        
        .done-img
            display flex
            width 46px
            height 45px
            background-image url('../../../assets/img/done.svg')
            background-size contain
            margin-bottom 12px

        .text
            font-size 18px
            line-height 21px
            letter-spacing 0.2px
            color #1D1C1C
            max-width 456px
            text-align center

            @media screen and (max-width: 675px)
                margin-left 20px
                margin-right 20px
        
        h1
            @media screen and (max-width: 675px)
                margin-left 20px
                margin-right 20px