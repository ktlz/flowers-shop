.cover
    background-image url('../../../assets/img/cover.jpg')
    background-size: cover
    height 777px
    background-repeat no-repeat
    width 100%

    @media screen and (max-width: 675px)
        height 500px
    .wrapper
        padding-top 106px

        h1
            margin 0
            color #CA6791
            font-size 44px
            line-height 47px
            text-transform uppercase
            letter-spacing 4.7px
        
        p
            font-size 18px
            line-height 32px
            letter-spacing 0.2px
            max-width 366px
            margin-top 64px

        @media screen and (max-width: 1200px)
            p,
            button
                margin-left 30px
        @media screen and (max-width: 675px)
            display flex
            flex-direction column
            align-items center
            p
                text-align center
                max-width unset
                margin 30px
            button
                margin 0 auto
        @media screen and (max-width: 375px)
            padding-top 70px

.popular-products
    display flex
    flex-direction column
    align-items center
    justify-content center
    margin-top 140px
    margin-bottom 140px

    @media screen and (max-width: 1200px)
        margin-top 60px 
        margin-bottom 60px
    &-title
        font-size 36px
        line-height 32px
        letter-spacing 0.2px
        color #CA6791
        margin-bottom 66px
        
    &-items
        display flex
        justify-content center
        flex-wrap wrap

    .more
        color #81AA94
        text-decoration none
        margin-top 40px
        font-size 21px
        line-height 32px

        &:hover
            text-decoration underline


.contact-form
    margin-bottom 140px

    @media screen and (max-width: 1200px)
        margin-bottom 60px

    h1
        text-align center
        color #CA6791
        margin-bottom 59px

    .wrapper
        display flex
        justify-content center

        @media screen and (max-width: 1050px)
            flex-direction column
            align-items center

        .contact-form-text
            margin-right 131px

            @media screen and (max-width: 1050px)
                margin-right 0
                margin-bottom 30px

                p
                    text-align center
                    margin 20px

            p
                font-size 18px
                line-height 32px
                letter-spacing 0.2px



        .form
            display flex
            flex-direction column
            align-items center
            .input,
            .textarea
                position relative
                display flex
                flex-direction column
                margin-bottom 24px
                
                input
                textarea
                    border 1px solid #81AA94
                    box-sizing border-box
                    border-radius 10px
                    background-color transparent
                    padding 18px 34px
                    width 350px
                &-label
                    position absolute
                    left 32px
                    top -11px
                    background-color #fff
                    padding 3px
                    font-size 15px
                    line-height 19px
                    color #1D1C1C

            .textarea
                margin-bottom 16px

            .checkbox
                display flex
                align-items center
                font-size 14px
                line-height 18px
                color #77A88E
                padding-left 25px

                .check__input 
                    position absolute
                    -webkit-appearance none
                    -moz-appearance none
                    appearance none
                    border none
                .check__box 
                    position absolute
                    margin-left -27px
                    overflow hidden
                    width 20px
                    height 20px
                    min-width 20px
                    border-radius 7px
                    border 1px solid #77A88E

                .check__input:checked + .check__box 
                    background-image url('../../../assets/img/check.svg')
                    background-position center
                    background-repeat no-repeat
                    
.about-us
    .wrapper
        display flex
        flex-direction column

    &-top
        display flex
        margin-top 60px

        @media screen and (max-width: 900px)
            flex-direction column-reverse
            align-items center
            margin-top 30px
        .back-img
            display flex
            background-image url('../../../assets/img/shop-top-back.png')
            background-size cover
            width 505px
            min-width 505px
            height 377px

            @media screen and (max-width: 600px)
                display none
            
        .front-img
            display flex
            margin-top -182px
            margin-left 332px
            z-index 2
            background-image url('../../../assets/img/shop-top-front.png')
            background-size 273px 291px
            background-repeat no-repeat
            min-width 273px
            height 291px

            @media screen and (max-width: 600px)
                margin 0
                background-size cover
                width 405px
                min-width 405px
                height 347px
        .top-text
            font-size 18px
            line-height 32px
            letter-spacing 0.2px
            color #1D1C1C

            @media screen and (max-width: 1200px)
                margin-right 20px

            @media screen and (max-width: 900px)
                margin 20px
            
            > div
                margin-bottom 25px
            div:nth-child(2)
                margin-left 35px

                @media screen and (max-width: 900px)
                    margin-left 0

    &-bottom
        display flex
        justify-content end
        margin-top 60px

        @media screen and (max-width: 900px)
            flex-direction column
            align-items center
        .image-bottom
            display flex
            background-image url('../../../assets/img/shop-bottom.png')
            background-size cover
            width 405px
            min-width 405px
            height 347px
        .text 
            margin-right 28px
            max-width 470px
            font-size 18px
            line-height 32px
            letter-spacing 0.2px
            color #1D1C1C

            @media screen and (max-width: 1200px)
                margin-left 20px

            > div
                margin-bottom 25px


