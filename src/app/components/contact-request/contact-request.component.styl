.contact-form
    margin-bottom 140px

    @media screen and (max-width: 1200px)
        margin-bottom 60px

    h1
        text-align center
        color #CA6791
        margin-bottom 59px

    .wrapper
        display flex
        justify-content center

        @media screen and (max-width: 1050px)
            flex-direction column
            align-items center

        .contact-form-text
            margin-right 131px

            @media screen and (max-width: 1050px)
                margin-right 0
                margin-bottom 30px

                p
                    text-align center
                    margin 20px

            p
                font-size 18px
                line-height 32px
                letter-spacing 0.2px



        .form
            display flex
            flex-direction column
            align-items center
            .input,
            .textarea
                position relative
                display flex
                flex-direction column
                margin-bottom 24px
                
                input
                textarea
                    border 1px solid #81AA94
                    box-sizing border-box
                    border-radius 10px
                    background-color transparent
                    padding 18px 34px
                    width 350px
                &-label
                    position absolute
                    left 32px
                    top -11px
                    background-color #fff
                    padding 3px
                    font-size 15px
                    line-height 19px
                    color #1D1C1C

                    @media screen and (max-width: 800px)
                        background-color #faedf3


            .textarea
                margin-bottom 16px
            
            .warning
                color #CA6791
                font-size 13px
                margin-top 5px


            .checkbox
                display flex
                align-items center
                font-size 14px
                line-height 18px
                color #77A88E
                padding-left 25px

                .check__input 
                    position absolute
                    -webkit-appearance none
                    -moz-appearance none
                    appearance none
                    border none
                .check__box 
                    position absolute
                    margin-left -27px
                    overflow hidden
                    width 20px
                    height 20px
                    min-width 20px
                    border-radius 7px
                    border 1px solid #77A88E

                .check__input:checked + .check__box 
                    background-image url('../../../assets/img/check.svg')
                    background-position center
                    background-repeat no-repeat
                